<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/note_item_background"
    android:padding="10dp"
    android:layout_marginVertical="2dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="note title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginVertical="1dp"
        android:id="@+id/note_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this is the note content it can be quite long. soo i am giving max line as 2 and elliopse s the note content it can be quite long. soo i am giving max line as 2 and ellio line at end"
        android:textSize="14sp"
        android:maxLines="2"
        android:textColor="@color/gray"
        android:ellipsize="end"
        android:layout_marginVertical="1dp"
        android:id="@+id/note_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this nt at end"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginVertical="1dp"
        android:id="@+id/note_timestamp"
        android:gravity="end"/>


</LinearLayout>